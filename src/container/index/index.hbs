<form class="form" id="form">
    <img height="160px" width="100%" src="https://picsum.photos/1200/1200" alt="Form image" class="form__image">

    <h1 class="form__title">Реєстрація користувача</h1>

    <div class="form__group">
        <label for="username" class="form__label">Ім'я користувача</label>
        <input class="form__input" type="text" id="username" name="username" required>

        <span class="form__button-save">Save</span>
    </div>

    <div class="form__group">
        <label for="email" class="form__label">Email</label>
        <input class="form__input" type="email" id="email" name="email" required>
    </div>

    <div class="form__group">
        <label for="age" class="form__label">Age</label>
        <input class="form__input" type="number" id="age" name="age" required>

        <span class="form__button-add" operator="+" value="10">+10</span>
        <span class="form__button-add" operator="-" value="10">-10</span>

    </div>

    <div class="form__group">
        <label for="role" class="form__label">Оберіть роль</label>
        <select class="form__select" name="role" id="role" required>
            <option value="" disabled="" selected="">Роль</option>
            <option value="user">Користувач</option>
            <option value="admin">Адміністратор</option>
        </select>
    </div>

    <div class="form__group form__group--checkbox">
        <label for="agree" class="form__label">Відправити повідомлення на email</label>
        <input class="form__input" type="checkbox" id="agree" name="agree" required>
    </div>

    <button class="form__button" type="submit"><span>Зареєструватися</span></button>

    <div id="outer">
        <div id="inner">
            Click me!
        </div>
    </div>

</form>


